#include<iostream>      
     
using namespace std;      
int main()        
{            
    int n=0,j=0;       
             
    while(cin>>n){      
            
        while(n>=3){    
            if(n%3==0){    
                n=n/3;    
            }else if(n%3==1)   
            {    
                n=2*n+1;    
            } else  
            {  
                n=2*n-1;    
             }   
                j+=1;       
            if(n<3){    
                break;    
            }    
        }    
            cout<<j+1<<endl;    
            j=0;    
     }      
         
    return 0;        
}         

