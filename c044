#include<iostream>      
using namespace std;      
int main(){      
      
    int a,b,c,d,e,f;    
      
    while(cin>>a>>b>>c>>d){  
      
          e=a+b;  
          f=c+d;  
          if(e>f){  
            cout<<f<<endl;  
              
          }else if(f<e){  
            cout<<e<<endl;  
              
          }else  
          {  
            cout<<e<<endl;  
              
          }  
          
    }    
    system("pause");      
    return 0;      
}      

