#include<iostream>        
using namespace std;        
int main()          
{              
    int n,x,y;         
    cin>>y;  
    for(int i=1;i<=y;i++){  
         
    while(cin>>n>>x){        
      if(n==x){  
      if(n==0 && x==0){  
        break;  
      }else{  
        cout<<"0"<<endl;  
      }         
     }else if(n>x){       
        cout<<"A "<<n-x<<endl;       
     }else if(n<x){     
        cout<<"B "<<x-n<<endl;        
     }   
}   
}     
    return 0;          
}           

