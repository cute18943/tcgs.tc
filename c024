#include <iostream>      
   
using namespace std;      
int main() {      
      
    int n,b;    
    int a[100];    
    
    cin >> n;    
    for(int i=0;i<n;i++){          
    cin >> a[i];    
    }           
    
    int min;    
    min=a[0];                      
    for(int i=0;i<n;i++){          
        if(a[i]<min)    
        min=a[i];    
    }    
      
    int max=0;  
    for(int i=0;i<n;i++){          
        if(a[i]>max)    
        max=a[i];    
    }    
      
     b=max-min;  
     cout<<b<<endl;  
      
      
        
    return 0;      
}      

