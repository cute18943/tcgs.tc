#include<iostream>     
#include<cmath>    
using namespace std;      
int main()        
{            
    int n,k,a,b;    
     
    while(cin>>n>>k){    
          a=n-k;  
          b=a-k;  
          cout<<abs(b)<<endl;  
    }    
        
    return 0;        
}         

