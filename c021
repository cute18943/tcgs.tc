#include <iostream>    
    
using namespace std;    
int main() {    
    
    int a,b,c,d=1,e=2,f=3,g=4,i=5,j,k,m,n,p,q,r,s,t,u,v,w=0,x,y,z,aa;    
    while(cin>>a>>b>>c){    
          
        j=a*d;  
        k=b*f;  
        m=c*i;  
        n=j+k+m;  
          
        x=a*f;  
        p=b*e;  
        q=c*g;  
        r=x+p+q;  
          
        s=a*f;  
        t=b*f;  
        u=c*f;  
        v=s+t+u;  
          
        if(n>w){  
            w=n;  
            y=1;  
        }  
          
        if(r<w){  
            w=r;  
            y=2;  
        }  
          
        if(v<w){  
            w=v;  
            y=3;  
        }  
          
        if(y==1){  
            cout<<"A ";  
        }else if(y==2){  
            cout<<"B ";  
        }else if(y==3){  
            cout<<"C ";  
        }            
        cout<<w<<endl;          
    }    
    return 0;    
}    

