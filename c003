#include<iostream>       
#include<cmath>      
using namespace std;        
int main()          
{              
    int n,k,a,b;      
       
    while(cin>>n>>k){      
              
          if(n==k){    
            a=200000;    
            cout<<a<<endl;    
          }    
              
           else if(n%10000000 == k%10000000)    
          {    
            a=40000;    
            cout<<a<<endl;    
                
          }    
               
           else if (n%1000000 == k%1000000)    
            {    
                a=10000;    
                cout<<a<<endl;    
            }    
            
              
           else if (n%100000 == k%100000)    
            {    
                a=4000;    
                cout<<a<<endl;    
            }    
                
             else if (n%10000 == k%10000)    
            {    
                a=1000;    
                cout<<a<<endl;    
            }    
                
             else if (n%1000 == k%1000)    
            {    
                a=200;    
                cout<<a<<endl;    
            }else    
            {    
                a=0;    
                cout<<a<<endl;    
            }          
    }       
    return 0;          
}         

