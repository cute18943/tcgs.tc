#include<iostream>    
   
using namespace std;    
int main()      
{          
    int n=0,z=0,a=0;     
    
       
    while(cin>>n){    
      
            a=n/4;  
            z=n+a;  
              
            if(n==4)  
            {  
                cout<<n<<endl;  
            }else{  
                cout<<z<<endl;  
            }  
              
              
     }    
       
      
       
       
       
    return 0;      
}       

