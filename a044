#include <iostream>  
  
using namespace std;  
int main() {  
      
    int n;  
    while(cin>>n){  
        int sum=0;  
        for(int i=1;i<n;i++){  
             if(n%i==0){  
                sum+=i;  
             }  
        }   
        if(sum>n){  
            cout<<"Abundant\n";  
        }  
        else if(sum==n){  
            cout<<"Perfect\n";  
        }  
        else{  
            cout<<"Deficient\n";  
        }   
    }  
    return 0;  
}  

