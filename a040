#include<iostream>      
using namespace std;      
int main()        
{            
    int n,x,y,z;       
    cin>>z;  
    for(int i=1;i<=z;i++){  
      
    cin>>n>>x;  
     if (cin.fail()) {    
        break;    
     }    
      if(n==x){      
        cout<<"Case "<<i<<": "<<"0"<<endl;   
            
     }else if(n>x){      
        cout<<"Case "<<i<<": "<<"A "<<n-x<<endl;      
     }else if(n<x){      
        cout<<"Case "<<i<<": "<<"B "<<x-n<<endl;      
     }        
     }      
      
    return 0;        
}         

